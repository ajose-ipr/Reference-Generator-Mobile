<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_dropdown_option.xml -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvOptionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TC"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="TC" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvOptionDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Check"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                tools:text="Type Check" />

        </LinearLayout>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipOptionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARTICULARS"
            android:textSize="10sp"
            android:layout_marginEnd="8dp"
            tools:text="PARTICULARS" />

        <ImageButton
            android:id="@+id/btnDeleteOption"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete_option"
            app:tint="#E53935" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
