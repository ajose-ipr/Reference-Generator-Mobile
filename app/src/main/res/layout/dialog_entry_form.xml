<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_entry_form.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <!-- Particulars Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilParticulars"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/particulars"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_particulars">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etParticulars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:minHeight="48dp"
                android:contentDescription="particulars_hint" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Client Code Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilClientCode"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/client_code"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_client">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etClientCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:minHeight="48dp"
                android:contentDescription="client_code_hint" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Capacity Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCapacity"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/capacity_mw"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_client"
            app:suffixText="MW">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:minHeight="48dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- State Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilStateName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/state_name"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_state">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etStateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:minHeight="48dp"
                android:contentDescription="state_name_hint" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Site Name Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSiteName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/site_name"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_site">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etSiteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:minHeight="48dp"
                android:contentDescription="site_name_hint" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>